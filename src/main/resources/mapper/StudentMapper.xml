<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxf.mybatis.mapper.StudentMapper">
    <select id="getStudentById" resultType="com.gxf.mybatis.beans.Student">
      select * from student where id = #{id}
    </select>

    <insert id="addStudent" parameterType="com.gxf.mybatis.beans.Student">
        INSERT INTO student(name, age) values (#{name}, #{age})
    </insert>
</mapper>